@model Registration1.Models.tblRegistration

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head runat="server">
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
    <title>Registration Form</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
        body {
            color: #fff;
            background: #b380ff;
            font-family: 'Roboto', sans-serif;
            background-image: linear-gradient(to bottom right, #b380ff, #9213ed);
        }

        .form-control {
            height: 40px;
            box-shadow: none;
            color: #969fa4;
        }

            .form-control:focus {
                border-color: #5cb85c;
            }

        .form-control, .btn {
            border-radius: 3px;
        }

        .signup-form {
            width: auto;
            margin: 0 auto;
            padding: 30px 0;
            font-size: 15px;
        }

            .signup-form h2 {
                color: black;
                margin: 0 0 15px;
                position: relative;
                text-align: center;
                font-weight:bold;
            margin-top:20px;

            }

            .signup-form form {
                color: #999;
                border-radius: 3px;
                margin-bottom: 15px;
                background: #f2f3f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .signup-form .form-group {
                margin-bottom: 4px;
                font-weight:bold;
                color:black;
            }

            .signup-form .btn {
                font-size: 16px;
                font-weight: bold;
                min-width: 140px;
                outline: none !important;
            }

            .signup-form form a {
                color: #5cb85c;
                text-decoration: none;
            }

                .signup-form form a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="signup-form text-black" align="center" runat="server">
            <div class="form-horizontal" align="center" runat="server">
                <h2>Farmer Request Form</h2>
                <p class="hint-text">Create your account. It's free and only takes a minute.</p>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type = "Time" } })
                    @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.District, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Taluka, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Taluka, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Taluka, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Village, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Village, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Village, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Phone_No, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.Request_For, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.Request_For, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Request_For, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                @Html.LabelFor(model => model.No_of_Livestock, htmlAttributes: new { @class = "control-label col-md-1 mr-3" })
                <div class="col-sm-2">
                    @Html.EditorFor(model => model.No_of_Livestock, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.No_of_Livestock, "", new { @class = "text-danger" })
                </div>
            </div><br/>
            <div class="form-group">
                <div class="col-md-2 col-md-5">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</body>
</html>
